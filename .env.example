# === NEXTVISION ENVIRONMENT CONFIGURATION ===
# Copy this file to .env and configure for your environment

# === CORE APPLICATION ===
NEXTVISION_ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKER_COUNT=1

# === DATABASE CONFIGURATION ===
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nextvision_dev
DB_USER=nextvision_user
DB_PASSWORD=your_secure_database_password

# === REDIS CACHE ===
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password
REDIS_DB=0

# === EXTERNAL APIS ===
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# === SECURITY ===
SECRET_KEY=your_32_character_secret_key_change_in_production
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# === MONITORING ===
PROMETHEUS_PORT=8090
PROMETHEUS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_for_error_tracking
DATADOG_API_KEY=your_datadog_api_key

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/nextvision/app.log
LOG_REQUESTS=true

# === PERFORMANCE ===
CACHE_ENABLED=true
BATCH_SIZE=50
MAX_CONCURRENT_BATCHES=10
CIRCUIT_BREAKER_THRESHOLD=5

# === FEATURE FLAGS ===
FEATURE_ADAPTIVE_WEIGHTING=true
FEATURE_GOOGLE_MAPS_INTELLIGENCE=true
FEATURE_BATCH_PROCESSING=true
FEATURE_CACHING=true
FEATURE_RETRY_MECHANISMS=true
FEATURE_HEALTH_MONITORING=true
FEATURE_STRUCTURED_LOGGING=true
FEATURE_PERFORMANCE_OPTIMIZATION=true

# === COMMITMENT BRIDGE INTEGRATION ===
COMMITMENT_BRIDGE_URL=http://localhost:3000
COMMITMENT_BRIDGE_API_KEY=your_commitment_bridge_api_key
COMMITMENT_BRIDGE_TIMEOUT=30

# === BACKUP CONFIGURATION ===
S3_BACKUP_BUCKET=nextvision-backups
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key
BACKUP_RETENTION_DAYS=30

# === PRODUCTION OVERRIDES ===
# Uncomment and configure for production
# NEXTVISION_ENV=production
# DEBUG=false
# WORKER_COUNT=4
# SECRET_KEY=generate_secure_32_character_key
# CORS_ORIGINS=https://yourdomain.com
# DB_HOST=your_production_db_host
# REDIS_HOST=your_production_redis_host
# LOG_LEVEL=INFO
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# === AWS CONFIGURATION (if using AWS services) ===
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=eu-west-1
# AWS_S3_BUCKET=nextvision-production

# === KUBERNETES CONFIGURATION ===
# KUBERNETES_NAMESPACE=nextvision
# KUBERNETES_SERVICE_ACCOUNT=nextvision-service-account

# === DEVELOPMENT TOOLS ===
# JUPYTER_ENABLE=false
# PROFILING_ENABLE=false
# DEBUG_TOOLBAR_ENABLE=false
